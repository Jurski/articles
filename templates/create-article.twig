{% extends "base.twig" %}

{% block title %}Create Article{% endblock %}

{% block content %}
    {% if session.flash_message %}
        <div class="alert alert-{{ session.flash_type }}">
            {{ session.flash_message }}
        </div>
    {% endif %}

    <h2 class="mb-4">Fill in the form to create an article</h2>
    <form action="/articles" method="POST">
        <div class="form-group">
            <label for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author"
                   value="{{ session.previous_data.author }}">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" value="{{ session.previous_data.title }}"
                   required>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" maxlength="1000" minlength="1"
                      required>{{ session.previous_data.content }}</textarea>
        </div>
        <button class="btn btn-primary" type="submit">Create</button>
    </form>
{% endblock %}
