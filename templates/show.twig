{% extends "base.twig" %}

{% block title %}Article{% endblock %}

{% block content %}
    {% if session.flash_message is defined and session.previous_data is empty %}
        <div class="alert alert-{{ session.flash_type }}">
            {{ session.flash_message }}
        </div>
    {% endif %}

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{ data.article.title }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ data.article.author }}</h6>
            <p class="card-text">{{ data.article.content }}</p>
        </div>
    </div>
    <p class="mb-0">Likes: {{ data.article.likes }}</p>

    <div class="d-flex justify-content-between">
        <div class="p-2">
            <form action="/articles/{{ data.article.id }}/likes" method="POST">
                <button class="btn btn-success mt-3" type="submit">Like</button>
            </form>
        </div>
        <div class="p-2">
            <form action="/articles/{{ data.article.id }}/edit" method="GET">
                <button class="btn btn-primary mt-3" type="submit">Modify Article</button>
            </form>
        </div>
    </div>
    <hr class="hr"/>
    {% if session.previous_data %}
        <div class="alert alert-{{ session.flash_type }}">
            {{ session.flash_message }}
        </div>
    {% endif %}
    <div class="container mt-4">
        <h2>Add Comment</h2>
        <form action="/articles/{{ data.article.id }}/comments" method="POST" class="mb-4" id="form">
            <div class="form-group">
                <label for="author">Author</label>
                <input class="form-control" type="text" id="author" name="author"
                       value="{{ session.previous_data.author }}" required>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="5" maxlength="500" minlength="1"
                          required>{{ session.previous_data.content }}</textarea>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
        <hr/>
        <h2>All Comments</h2>
        <div class="row">
            {% if data.comments is empty %}
                <div class="col-12">
                    <p class="text-center text-muted">No comments to show.</p>
                </div>
            {% else %}
                {% for comment in data.comments %}
                    <div class="col-lg-12 mb-3" id="{{ comment.id }}">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">{{ comment.author }}</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">{{ comment.createdAt|date('Y-m-d H:i:s', 'Europe/Riga') }}</h6>
                                    </div>
                                    <div>
                                        <form action="/comments/{{ comment.id }}/likes" method="POST" class="mb-3">
                                            <button class="btn btn-outline-primary btn-sm" type="submit">
                                                üëç {{ comment.likes }}</button>
                                        </form>
                                        <form action="/comments/{{ comment.id }}" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button class="btn btn-danger" type="submit"
                                                    onclick="return confirm('Are you sure you want to delete the comment?');">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <p class="card-text">{{ comment.content }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>


{% endblock %}
