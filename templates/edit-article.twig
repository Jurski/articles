{% extends "base.twig" %}

{% block title %}Edit Article{% endblock %}

{% block content %}
    {% if session.flash_message %}
        <div class="alert alert-{{ session.flash_type }}">
            {{ session.flash_message }}
        </div>
    {% endif %}

    <h2 class="mb-4">Edit article details</h2>
    <form action="/articles/{{ data.article.id }}" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <div class="form-group">
            <label for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author"
                   value="{{ session.previous_data.author is defined and session.previous_data.author is not empty ? session.previous_data.author : data.article.author }}">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title"
                   value="{{ session.previous_data.title is defined and session.previous_data.title is not empty ? session.previous_data.title : data.article.title }}"
                   required>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="5" maxlength="1000" minlength="1"
                      required>{{ session.previous_data.content is defined and session.previous_data.content is not empty ? session.previous_data.content : data.article.content }}</textarea>
        </div>
        <button class="btn btn-primary" type="submit">Save Changes</button>
    </form>

    <hr>

    <form action="/articles/{{ data.article.id }}" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger" type="submit"
                onclick="return confirm('Are you sure you want to delete this article?');">Delete Article
        </button>
    </form>
{% endblock %}
